<resources>

    <!-- region Base Application Theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">

        <!--  Primary  -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!--  Secondary  -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!--  Background  -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <!--  Surface  -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!--  Status Bar  -->
        <item name="android:colorPrimaryDark">?attr/colorPrimaryVariant</item>

        <!--  Navigation Bar  -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <!--  endregion  -->

    <!--  region Button  -->
    <style name="MyButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyButton.Home" parent="MyButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">64sp</item>
    </style>
    <!--  endregion  -->

    <!--  region TextView  -->
    <style name="MyTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyTextView.Caption" parent="MyTextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="MyTextView.Headline5" parent="MyTextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5
        </item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="MyTextView.Headline1" parent="MyTextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline1
        </item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyTextView.Subtitle1" parent="MyTextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:layout_width">0dp</item>
    </style>
    <!--  endregion  -->

    <!--  region Radio  -->
    <style name="MyRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MyRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--  endregion  -->
</resources>